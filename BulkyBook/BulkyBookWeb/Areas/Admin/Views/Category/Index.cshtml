@using BulkyBook.Models

@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category list
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped w-100">
    <thead>
        <tr>
            <th style="text-align:center">
                Category Name
            </th>
            <th style="text-align:center">
                Display Order
            </th>
            <th style="text-align:center">
                Created At
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="40%" style="text-align:center">
                    @obj.Name
                </td>
                <td width="15%" style="text-align:center">
                    @obj.DisplayOrder
                </td>
                <td width="25%" style="text-align:center">
                    @obj.CreatedDateTime
                </td>
                <td width="20%" style="text-align:center">
                    <div class="h-50" role="group">
                        <a asp-controller="Category" asp-action="Update" asp-route-id="@obj.ID" style="text-decoration:none">
                            <i class="bi bi-pencil-square"></i>&nbsp; Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.ID" style="text-decoration:none">
                            <i class="bi bi-x-circle"></i>&nbsp; Delete
                        </a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>